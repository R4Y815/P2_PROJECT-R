<%-include('y_headerGlobal');-%>
<h1 class="topSpacer"><p></p>.</h1>
<h4 class="topSpacer"><p></p>.</h4>

<h3>
  <b>All Track Times</b>
</h3>
<p></p>

<% tracktimes.forEach((tracktimes) => { %>
<h5><b><u>TrackTime ID</u></b>: <%= tracktimes.tracktimes_id %></h5>
<div>
  <form action="/tracktime/<%= tracktimes.tracktimes_id %>/edit" method="GET">  
    <button type="submit" class="btn-sm">EDIT Tracktime <%= tracktimes.tracktimes_id %> </button>
  </form>
</div>
<p></p>
<div>
  <div>
    <b>Date</b>: <%= tracktimes.dateStr %>    
  </div>
  <div>
    <b>Event</b>: <%= tracktimes.event_name %>
  </div>
  <div>
    <b>Track Name</b>: <%= tracktimes.track_name %>
  </div>
  <div>
     <b>Direction</b>: <%= tracktimes.direction %>
  </div>
  <div>
     | <b>Driver</b>: <%= tracktimes.user_name %>
  </div>
  <div>
    <div>
      | <b>Laps Completed</b>: <%= tracktimes.lapcount %>
    </div>
    <div>
  |   <b>Total Time</b>: <%= tracktimes.timeStr %>
    </div>         
  </div>
  <div>
    <div>
      <b>Platform Type</b>: <%= tracktimes.type_name %>
    </div>
    <div>
      <b>Chassis</b>: <%= tracktimes.platform_brand %> <%= tracktimes.platform_name %> (<%= tracktimes.platform_model %>) 
    </div>
    <div>
      <b>Chassis Setup: </b><a href="/setup/<%= tracktimes.setup_id %>">[<%= tracktimes.setup_id %>-<%= tracktimes.setup_name %>]</a>
    </div>
  </div>
  <div>
    <div>
      <b>Bodyshell</b>: <%= tracktimes.bodyshell_brand %> <%= tracktimes.bodyshell_name %> (<%= tracktimes.bodyshell_variant %>)  
  </div>             
</div>
<p></p>

  <div>
    <form action="/tracktime/<%= tracktimes.tracktimes_id %>?_method=DELETE" method="POST">  
    <button type="submit" class="btn-sm">DELETE Tracktime <%= tracktimes.tracktimes_id %> </button>
    </form>  
  </div>
<p></p>
<hr/>  
<% }); %>  
<%-include('z_footerGlobal')-%>